<Page x:Class="ImageResizing.SampleOp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="193.075" d:DesignWidth="200"
      
	Title="SampleOp">

    <Grid Background="#eeeeee" Width="200" Height="194">
        <Label Content="Blur" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Smooth" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Width="180" Click="SmoothClick"/>
        <Button Content="Sharpen" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="180" Click="SharpenClick"/>
        <Button Content="Gaussian" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" Width="180" Click="GussianClick"/>
