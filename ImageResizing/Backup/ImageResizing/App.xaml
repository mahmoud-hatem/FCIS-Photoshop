        <ImageBrush x:Key="OBackground" ImageSource="imgs\OBackground.jpg" />
        <!--Control colors.-->
        <Color x:Key="WindowColor">#FFE8EDF9</Color>
        <Color x:Key="ContentAreaColorLight">#262626</Color>
        <Color x:Key="ContentAreaColorDark">#262626</Color>

        <Color x:Key="DisabledControlLightColor">#dbdbdb</Color>
        <Color x:Key="DisabledControlDarkColor">#dbdbdb</Color>
        <Color x:Key="DisabledForegroundColor">#dbdbdb</Color>

        <Color x:Key="SelectedBackgroundColor">#FFC5CBF9</Color>
        <Color x:Key="SelectedUnfocusedColor">#FFDDDDDD</Color>

        <Color x:Key="ControlLightColor">#dadada</Color>
        <Color x:Key="ControlMediumColor">#acacac</Color>
